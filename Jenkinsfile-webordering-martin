pipeline {
    agent any
    stages {
        stage('Installing Package') {
            steps {
                sh 'yarn add node-sass@4.14.1'
                sh 'yarn'
            }
        }
        stage('Build & Deploy') {
            steps {
                withAWS(credentials: 'aws-demo', region: 'ap-southeast-1') {
                    sh 'npm run webordering-martin --silent'
                }
            }
        }
    }
}