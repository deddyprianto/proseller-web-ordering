pipeline {
    agent any
    stages {
        stage('NPM Install') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build & Deploy') {
            steps {
                withAWS(credentials: 'aws-prod', region: 'ap-southeast-1') {
                    sh 'npm run webordering-demo.proseller.io --silent'
                }
            }
        }
    }
}