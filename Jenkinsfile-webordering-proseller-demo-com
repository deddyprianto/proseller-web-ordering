pipeline {
    agent any
    stages {
        stage('Installing Package') {
            steps {
                sh 'yarn'
            }
        }
        stage('Build & Deploy') {
            steps {
                withAWS(credentials: 'aws-demo', region: 'ap-southeast-1') {
                    sh 'npm run webordering.proseller-demo.com --silent'
                }
            }
        }
    }
}